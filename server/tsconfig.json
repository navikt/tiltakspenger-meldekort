{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "lib": [
      "es2023",
      "dom"
    ],
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2022",
    "jsx": "react",
    "noEmit": true,
    "baseUrl": "..",
    "paths": {
      "@*": [
        "server/src/*"
      ],
      "@client/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "../src/*.ts",
    "../src/*.tsx"
  ]
}
