{
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "moduleDetection": "force",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true
    },
    "include": ["vite.config.ts", "playwright.config.ts", "globals.d.ts"]
}
