{
    "name": "tiltakspenger-meldekort",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "prepare": "husky",
        "dev": "npm run dev --workspace server",
        "start": "npm run start --workspace server",
        "build": "npm-run-all build:*",
        "build:client": "vite build --outDir server/dist/client",
        "build:ssr": "vite build --ssr src/main-server.tsx --outDir server/src/_ssr-dist --emptyOutDir false",
        "build:server": "npm run build --workspace server",
        "lint": "npm-run-all --parallel lint:*",
        "lint:tsc": "tsc --noEmit",
        "lint:tsc-server": "npm run tsc --workspace server",
        "lint:eslint": "eslint \"**/*.ts\" \"**/*.tsx\"",
        "test": "playwright test",
        "test:ui": "playwright test --ui"
    },
    "workspaces": [
        "server"
    ],
    "dependencies": {
        "@navikt/aksel-icons": "7.35.0",
        "@navikt/ds-css": "7.35.0",
        "@navikt/ds-react": "7.35.0",
        "@navikt/nav-dekoratoren-moduler": "3.6.1",
        "@preact/compat": "18.3.1",
        "dayjs": "1.11.19",
        "preact-render-to-string": "6.6.3",
        "swr": "2.3.7",
        "wouter": "3.8.1"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.11.0",
        "@eslint/js": "9.39.1",
        "@playwright/test": "^1.57.0",
        "@preact/preset-vite": "2.10.2",
        "@types/node": "24.10.1",
        "@types/react": "19.2.7",
        "@types/react-dom": "19.2.3",
        "@typescript-eslint/eslint-plugin": "8.48.1",
        "@typescript-eslint/parser": "8.48.1",
        "@vitejs/plugin-react": "5.0.0",
        "eslint": "9.39.1",
        "eslint-plugin-css-modules": "2.12.0",
        "eslint-plugin-react": "7.37.5",
        "eslint-plugin-react-hooks": "7.0.1",
        "eslint-plugin-react-refresh": "0.4.24",
        "globals": "^16.5.0",
        "husky": "9.1.7",
        "lint-staged": "16.2.7",
        "npm-run-all": "4.1.5",
        "playwright": "1.57.0",
        "prettier": "3.7.4",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "rollup-plugin-visualizer": "6.0.5",
        "sass": "1.94.2",
        "typescript": "5.9.3",
        "vite": "7.2.6",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint"
        ],
        "*.{ts,tsx,css}": [
            "prettier --write"
        ]
    }
}
